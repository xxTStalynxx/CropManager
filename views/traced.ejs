        function showSiembra(id) {
            $.ajax({
                url: '/siembras/' + id,
                method: 'GET',
                dataType: 'json',
                success: function (response) {
                    // Respuesta exitosa de la API
                    const cultivo = document.getElementById("cultivo");
                    const fecha_siembra = document.getElementById("fecha_siembra");
                    const stock_estimado = document.getElementById("stock_estimado");
                    const fecha_cosecha_est = document.getElementById("fecha_cosecha_est");
                    const produccion = document.getElementById("produccionObtenida");
                    const siembra = document.getElementById("idSiembra");
                    const idsiembra = document.getElementById("identificadorSiembra");
                    if (response != null) {
                        siembra.title = response.id;
                        idsiembra.value = response.id;
                        cultivo.textContent = response.cultivo;
                        fecha_siembra.textContent = response.fecha_siembra;
                        stock_estimado.textContent = response.produccion_estimada + ' Kg';
                        fecha_cosecha_est.textContent = response.fecha_cosecha_est;
                        produccion.value = response.produccion_estimada;
                        let contenedor = document.getElementById("contenedorSiembra");
                        contenedor.classList.remove('hideContainer');
                        contenedor = document.getElementById("contenedorSembrar");
                        contenedor.classList.add('hideContainer');
                    }
                },
                error: function (xhr, status, error) {
                    // Ocurrió un error al hacer la solicitud
                    let contenedor = document.getElementById("contenedorSiembra");
                    contenedor.classList.add('hideContainer');
                    contenedor = document.getElementById("contenedorSembrar");
