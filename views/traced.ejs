    <script>
        function readAllCamposApi() {
            $.ajax({
                url: '/campos',
                method: 'GET',
                dataType: 'json',
                success: function (response) {
                    // Respuesta exitosa de la API
                    if (response.length > 0) {
                        for (let i = 0; i < response.length; i++) {
                            let list = response[i].coordenadas.split(';')
                            let listaPol = []
                            for (let j = 0; j < list.length; j++) {
                                let list2 = list[j].split(',')
                                let obj = { lat: parseFloat(list2[0]), lng: parseFloat(list2[1]) }
                                listaPol.push(obj)
                            }

                            if (listaPol.length > 0) {
                                const newPolygon = new google.maps.Polygon({
                                    paths: listaPol,
                                    strokeOpacity: 0.8,
                                    strokeWeight: 3,
                                    fillColor: response[i].color,
                                    fillOpacity: 0.4,
                                    id: response[i].id,
                                    estado: response[i].estado,
                                    nombre: response[i].nombre,
                                    area: response[i].area,
                                    nombreEstado: response[i].nombreEstado,
                                    campoSembrado: response[i].campoSembrado
                                });

                                newPolygon.setMap(oMapaGoogle);
                                newPolygon.addListener("click", function () {
                                    showOptions(newPolygon);
                                });
                            }
                        }
                    }
                },
                error: function (xhr, status, error) {
                    // Ocurrió un error al hacer la solicitud
                    console.error(error);
                }
            });
        }

        function showOptions(campo) {
            if (oPolygon != null) {
                closeEditForma();
            }
            let contenedor = document.getElementById("containerOptions");
            const idCampo = document.getElementById("idCampo");
            idCampo.title = campo.id;
            const nombreCampo = document.getElementById("nombreCampo");
            nombreCampo.textContent = campo.nombre;
            const areaCampo = document.getElementById("areaCampo");
            areaCampo.textContent = campo.area + " m²";
            const estadoCampo = document.getElementById("estadoCampo");
            estadoCampo.textContent = campo.nombreEstado;
            showSiembra(campo.id);
            contenedor.classList.remove('hideContainer');
            if (campo.estado != campo.campoSembrado) {
                document.getElementById('editForma').disabled = false;
                document.getElementById('editDatos').disabled = false;
            } else {
                document.getElementById('editForma').disabled = true;
                document.getElementById('editDatos').disabled = true;
            }
            closeSiembra();
            showActividad();
            oPolygon = campo;
        }

