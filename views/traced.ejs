        let mListaPolygons = []

        async function initMap() {
            //@ts-ignore

            oMapaGoogle = new google.maps.Map(document.getElementById("map"), {
                center: { lat: -1.647467, lng: -78.673955 },
                zoom: 16,
                mapTypeId: 'hybrid',
                zoomControl: false,
                fullscreenControl: false,
                streetViewControl: false,
                mapTypeControl: false
            })

            oDrawingManager = new google.maps.drawing.DrawingManager({
                drawingControlOptions: {
                    position: google.maps.ControlPosition.TOP_CENTER,
                    drawingModes: [
                        google.maps.drawing.OverlayType.POLYGON,
                    ]
                },
                polygonOptions: {
                    fillColor: "#27AE60",
                    strokeOpacity: 0.8,
                    fillOpacity: 0.4,
                    strokeWeight: 3,
                    clickable: false,
                    editable: true,
                    zIndex: 1,
                },
            });

            oDrawingManager.setMap(oMapaGoogle)

            google.maps.event.addListener(oDrawingManager, 'polygoncomplete', function (poligono) {
                mListaCampo = []

                console.log("***************************")
                var lista = poligono.getPath().getArray()

                for (var i = 0; i < lista.length; i++) {
                    var obj = { lat: lista[i].lat(), lng: lista[i].lng() }
                    mListaCampo.push(obj)
                }

                if (mListaCampo.length > 0) {
                    oDrawingManager.setMap(null)
                    oPolygon = poligono
                    oContainerAddCampo = document.getElementById("ContainerAddCampo");
                    oContainerAddCampo.classList.remove("hideContainer");
                }

            })

            readAllCamposApi()
        }
        initMap()

        function saveCampo(idEncargado) {
            let oIdtxtNombre = document.getElementById("idtxtNombre")
            let oIdtxtDetalle = document.getElementById("idtxtDetalle")
            let oIdtxtArea = document.getElementById("idtxtArea")
            let StringCoordenadas = ""
            const txtError = document.getElementById("error");

            for (var i = 0; i < mListaCampo.length; i++) {
                if (mListaCampo.length - 1 === i) {
                    StringCoordenadas = StringCoordenadas + mListaCampo[i].lat + "," + mListaCampo[i].lng
                } else {
                    StringCoordenadas = StringCoordenadas + mListaCampo[i].lat + "," + mListaCampo[i].lng + ";"
                }
            }

            var objCampo = {
                encargado: idEncargado,
                estado: 1,
                nombre: oIdtxtNombre.value,
                descripcion: oIdtxtDetalle.value,
                area: oIdtxtArea.value,
                posiciones: StringCoordenadas
            }

            $.ajax({
                url: 'http://localhost:8000/campos/add',
                method: 'POST',
                dataType: 'json',
                data: {
                    // Aquí puedes pasar los datos que deseas enviar en el cuerpo de la solicitud
                    encargado: objCampo.encargado,
                    estado: objCampo.estado,
                    nombre: objCampo.nombre,
                    descripcion: objCampo.descripcion,
                    area: parseInt(objCampo.area),
                    posiciones: objCampo.posiciones
                },
                success: function (response) {
                    // La respuesta exitosa de la API
                    console.log(response);
                    oContainerAddCampo.classList.add("hideContainer")
                    oIdtxtDetalle.value = ""
                    oIdtxtArea.value = ""
                    oIdtxtNombre.value = ""
                    txtError.style.display = "none"
                    readAllCamposApi()
                },
                error: function (xhr, status, error) {
                    // Ocurrió un error al hacer la solicitud
                    console.error(error);
                    txtError.style.display = "block"
                }
            });
        }
