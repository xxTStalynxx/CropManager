        function saveForma() {
            const id_campo = document.getElementById("idCampo").title;
            let paths = oPolygon.getPath().getArray();
            oPolygon.setEditable(false);
            let stringCoordenadas = "";

            for (var i = 0; i < paths.length; i++) {
                if (paths.length - 1 === i) {
                    stringCoordenadas = stringCoordenadas + paths[i].lat() + "," + paths[i].lng();
                } else {
                    stringCoordenadas = stringCoordenadas + paths[i].lat() + "," + paths[i].lng() + ";";
                }
            }

            $.ajax({
                url: '/campos/editForma/' + id_campo,
                method: 'POST',
