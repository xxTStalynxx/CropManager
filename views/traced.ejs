    <script>
        let oMapaGoogle;
        let oDrawingManager;
        let mListaCampo = [];
        let oPolygon = null;

        async function initMap() {
            //@ts-ignore

            oMapaGoogle = new google.maps.Map(document.getElementById("map"), {
                center: { lat: -1.308856, lng: -78.698701 },
                zoom: 16,
                mapTypeId: 'hybrid',
                zoomControl: false,
                fullscreenControl: false,
                streetViewControl: false,
                mapTypeControl: false
            })

            oDrawingManager = new google.maps.drawing.DrawingManager({
                drawingControlOptions: {
                    position: google.maps.ControlPosition.TOP_CENTER,
                    drawingModes: [
                        google.maps.drawing.OverlayType.POLYGON,
                    ]
                },
                polygonOptions: {
                    fillColor: "#ECF0F1",
                    strokeOpacity: 0.8,
                    fillOpacity: 0.6,
                    strokeWeight: 3,
                    clickable: false,
                    editable: true,
                    zIndex: 1,
                },
            });

            oDrawingManager.setMap(oMapaGoogle)

            google.maps.event.addListener(oDrawingManager, 'polygoncomplete', function (poligono) {
                mListaCampo = [];
                closeOptions();
                if (oPolygon != null) {
                    closeEditForma();
                }
                let campoArea = document.getElementById("idtxtArea");
                let area = google.maps.geometry.spherical.computeArea(poligono.getPath());
                campoArea.value = Math.ceil(area);

                let lista = poligono.getPath().getArray()
                for (var i = 0; i < lista.length; i++) {
                    var obj = { lat: lista[i].lat(), lng: lista[i].lng() }
                    mListaCampo.push(obj);
                }

                if (mListaCampo.length > 0) {
                    oPolygon = poligono
                    document.getElementById("btnNuevoCampo").click();
                }
            })
            readAllCamposApi()
        }
        initMap()

        function saveCampo() {
            let campoNombre = document.getElementById("idtxtNombre");
            let campoDetalle = document.getElementById("idtxtDetalle");
            let campoArea = document.getElementById("idtxtArea");
            let campoEncargado = document.getElementById("encargadoCampo");
            const vacio = document.getElementById("idVacio");
            let stringCoordenadas = ""
            const txtError = document.getElementById("error");

            for (var i = 0; i < mListaCampo.length; i++) {
                if (mListaCampo.length - 1 === i) {
                    stringCoordenadas = stringCoordenadas + mListaCampo[i].lat + "," + mListaCampo[i].lng
                } else {
                    stringCoordenadas = stringCoordenadas + mListaCampo[i].lat + "," + mListaCampo[i].lng + ";"
                }
            }

            var objCampo = {
                encargado: campoEncargado.value,
                estado: vacio.title,
                nombre: campoNombre.value,
                descripcion: campoDetalle.value,
                area: campoArea.value,
                posiciones: stringCoordenadas
            }

            $.ajax({
                url: '/campos/add',
                method: 'POST',
                dataType: 'json',
                data: {
                    // Aquí puedes pasar los datos que deseas enviar en el cuerpo de la solicitud
                    encargado: objCampo.encargado,
                    estado: objCampo.estado,
                    nombre: objCampo.nombre,
                    descripcion: objCampo.descripcion,
                    area: parseInt(objCampo.area),
                    posiciones: objCampo.posiciones
                },
                success: function (response) {
                    // La respuesta exitosa de la API
                    document.getElementById("btnCancelarNC").click();
                    readAllCamposApi()
                },
                error: function (xhr, status, error) {
                    // Ocurrió un error al hacer la solicitud
                    console.error(error)
                    txtError.style.display = "block"
                }
            });
        }

        function closeNuevoCampo() {
            document.getElementById("idtxtNombre").value = "";
            document.getElementById("idtxtDetalle").value = "";
            document.getElementById("idtxtArea").value = "";
            document.getElementById("error").style.display = "none";
            oPolygon.setMap(null);
        }
    </script>

