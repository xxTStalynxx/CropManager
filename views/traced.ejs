    <script>
        function readAllCamposApi() {
            $.ajax({
                url: 'http://localhost:8000/campos',
                method: 'GET',
                dataType: 'json',
                success: function (response) {
                    // Respuesta exitosa de la API
                    if (response.length > 0) {
                        for (var i = 0; i < response.length; i++) {
                            var list = response[i].coordenadas.split(';')
                            var listaPol = []
                            for (var j = 0; j < list.length; j++) {
                                var list2 = list[j].split(',')
                                var obj = { lat: parseFloat(list2[0]), lng: parseFloat(list2[1]) }
                                listaPol.push(obj)
                            }

                            if (listaPol.length > 0) {
                                var bermudaTriangle = new google.maps.Polygon({
                                    paths: listaPol,
                                    strokeOpacity: 0.8,
                                    strokeWeight: 3,
                                    fillColor: "#27AE60",
                                    fillOpacity: 0.4,
                                });
                                bermudaTriangle.setMap(oMapaGoogle);
                                bermudaTriangle.addListener("click", showPolygon)
                            }
                        }
                    }
                },
                error: function (xhr, status, error) {
                    // Ocurrió un error al hacer la solicitud
                    console.error(error);
                }
            });
        }

        function showPolygon() {
            var elemento = document.getElementById('ContainerCultivoAdd')
            elemento.classList.remove('hideContainerAddCultivo');
        }
    </script>

