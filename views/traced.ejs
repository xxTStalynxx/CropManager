        function saveSiembra() {
            let txtCultivo = document.getElementById("selectedCultivo");
            let txtFecha = document.getElementById("fechaSiembra");
            let idCampo = document.getElementById("idCampo");

            let objSiembra = {
                id_campo: idCampo.title,
                id_cultivo: txtCultivo.value,
                fecha_siembra: txtFecha.value
            }

            $.ajax({
                url: '/siembras/add',
                method: 'POST',
                dataType: 'json',
                data: {
                    id_campo: objSiembra.id_campo,
                    id_cultivo: objSiembra.id_cultivo,
                    fecha_siembra: objSiembra.fecha_siembra,
                },
                success: function (response) {
                    // La respuesta exitosa de la API
                    closeSiembra()
                    oPolygon.setMap(null)
