    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <script>
        'use strict';
        (function () {
            $.ajax({
                url: '/dataUso',
                method: 'GET',
                dataType: 'json',
                success: function (response) {
                    const colorWhite = '#f4f4f4';

                    let labels = [];
                    let areas = [];
                    if (response.length > 0) {
                        for (var i = 0; i < response.length; i++) {
                            labels[i] = response[i].cultivo;
                            areas[i] = response[i].area;
                        }
                    }

                    const chartFieldsUse = document.querySelector('#chartFieldsUse'),
                        chartConfig = {
                            chart: {
                                height: 400,
                                width: 400,
                                type: 'pie'
                            },
                            labels: labels,
                            series: areas,
                            
                            dataLabels: {
                                enabled: true,
                                formatter: function (val, opt) {
                                    return parseInt(val) + '%';
                                }
                            },
                            legend: {
                                show: true,
                                position: 'top',
                            },
                            grid: {
                                padding: {
                                    top: 0,
                                    bottom: 0,
                                    right: 10
                                }
                            },
                        };
                    if (typeof chartFieldsUse !== undefined && chartFieldsUse !== null) {
                        const statisticsChart = new ApexCharts(chartFieldsUse, chartConfig);
                        statisticsChart.render();
                    }
                },
                error: function (xhr, status, error) {
                    // Ocurrió un error al hacer la solicitud
                    console.error(error);
                }
            });
        })();
    </script>
